/* pages/deal.wxss */
page {
    background: white;
    height: 100%;
}
.container {
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: center;
}
.header {
    width: 100%;
}
.content {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    width: 650rpx;
    height: 357rpx;
    border-radius: 20rpx;
    box-shadow: -2rpx -2rpx 30rpx #c6c6c6;
    background-color: white;
    margin-top: -300rpx;
}
.footer {
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-items: center;
}
.button-group1 {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: center;
    margin-left: 50rpx;
}
.button-group2 {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: center;
    margin-right: 50rpx;
}
text {
    margin-top: 15rpx;
}
.line {
    background: #E0E3DA;
    width: 20%;
    height: 5rpx;
    transform-origin:50% 50%;
    transform: rotate(60deg);
}
.copyright {
    color: #c6c6c6;
    margin-bottom: 20rpx;
}
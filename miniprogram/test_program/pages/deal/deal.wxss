/* pages/deal.wxss */
page {
    background: white;
    height: 100%;
}
.container {
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: center;
    border: 1px solid yellow;
}
.header {
    border: 1px solid black;
    width: 100%;
}
.content {
    border: 1px solid yellow;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    width: 650rpx;
    height: 357rpx;
    border-radius: 20rpx;
    box-shadow: -2rpx -2rpx 30rpx #c6c6c6;
    background-color: white;
}
.footer {
    width: 100%;
    border: 1px solid black;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
}
.copyright {
    color: #c6c6c6;
    margin-bottom: 20rpx;
}
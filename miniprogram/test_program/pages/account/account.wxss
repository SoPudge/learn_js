/* pages/account/account.wxss */
page {
    background: #e9e9e9;
}

.container {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.page-head {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: 357rpx;
    background-color: white;
}

.page-body {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.menu-title {
    width: 750rpx;
    margin-top: 20rpx;
    background: white;
    display: flex;
    flex-direction: row;
    justify-content: space-around;
    align-items: center;
}

.title-item {
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    align-items: center;
    margin-top: 10rpx;
}

.title-item text {
    margin-top: 15rpx;
    color: #999999;
    font-weight: 500;
}

.menu-items {
    width: 750rpx;
    margin-top: 20rpx;
}

.page-head {
    display: flex;
    flex-direction: row;
    justify-content: left;
    align-items: center;
}

.avatar image {
    width: 100rpx;
    height: 100rpx;
    margin-left: 50rpx;
}

button {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: left;
    margin-left: 30rpx;
    margin-top: -10rpx;
}